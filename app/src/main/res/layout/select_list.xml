<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:id="@+id/listview"
        android:background="#6b9e74"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:background="#6b9e74">


        <Button
            android:id="@+id/buttonBrowseFoot"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:text="Καταγραφή Πεζού"
            android:textAllCaps="false"
            android:background="@drawable/button_shape"/>

        <Button
            android:id="@+id/buttonBrowseWeel"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonBrowseFoot"
            android:layout_centerHorizontal="true"
            android:text="Καταγραφή ΑΜΕΑ"
            android:textAllCaps="false"
            android:background="@drawable/button_shape"/>

        <Button
            android:id="@+id/buttonBrowseBicycle"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/buttonBrowseFoot"
            android:layout_marginEnd="24dp"
            android:text="Καταγραφή Ποδηλάτου"
            android:textAllCaps="false"
            android:background="@drawable/button_shape"/>

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonBrowseFoot"
            android:layout_centerHorizontal="true"
            android:text="Έξοδος"
            android:textAllCaps="false"
            android:background="@drawable/button_shape"/>

    </RelativeLayout>
</LinearLayout>